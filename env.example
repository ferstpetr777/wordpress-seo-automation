# WordPress SEO Automation Platform - Environment Variables

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================
WP_URL=https://your-site.com/wp-json/wp/v2
WP_USERNAME=your_wordpress_username
WP_APP_PASSWORD=your_wordpress_app_password
WP_SITE_URL=https://your-site.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (for development)
DB_SQLITE_PATH=wordpress_articles.db

# MySQL (for production)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=wordpress_seo
DB_USER=username
DB_PASSWORD=password
DB_CHARSET=utf8mb4

# =============================================================================
# AI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TIMEOUT=30

# =============================================================================
# CONTENT GENERATION
# =============================================================================
DEFAULT_LANGUAGE=ru
DEFAULT_TEMPLATE=financial
MIN_WORD_COUNT=2000
MAX_WORD_COUNT=5000
QUALITY_THRESHOLD=70
SEO_THRESHOLD=70

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/automation.log
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
